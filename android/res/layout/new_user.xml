<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/vertical_hfill_vfill"
	android:background="@color/negro">
	
	<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="80px"
	    android:background="@color/negro"
	    android:id="@+id/topBanner" >
	
	    <RelativeLayout
	        android:layout_width="fill_parent"
			android:layout_height="fill_parent" >
		    
		    <ImageView
		        android:id="@+id/background"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/tiled_background" />
		    
		    <ImageView 
		        android:id="@+id/prcLogo"
		        android:layout_height="80px"
				android:layout_width="wrap_content"
				android:src="@drawable/logo_letters"
				android:paddingTop="10dp"
				android:paddingBottom="10dp" />
		    
		    <TextView
		        android:id="@+id/appName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/prc_name"
		        android:textStyle="bold"
		        android:textSize="16dp"
		        android:paddingLeft="100dp"
		        android:paddingTop="18dp" >
		    </TextView>
	    </RelativeLayout>      
	</LinearLayout>
	
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="80px"
	    android:background="@color/negro"
	    android:id="@+id/topBannerSaveChanges" >
	    
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal" >
		    
		    <ImageView
		        android:id="@+id/background"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/tiled_background" />
		    
		    <ImageView 
		        android:id="@+id/prcLogo"
		        android:layout_height="80px"
				android:layout_width="wrap_content"
				android:src="@drawable/logo_letters"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="10dp"/>
		    
		    <LinearLayout 
		        style="@style/horizontal_hfill_vfill"
		        android:layout_toRightOf="@id/prcLogo"
		        android:gravity="right"
		        android:paddingRight="10dp"
		        android:layout_height="80px">
		        
		        <Button
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:background="@layout/save_button"
		            android:drawableLeft="@drawable/ic_save"
		            android:onClick="onSaveChangesClick"
		            android:paddingBottom="4dp"
		            android:paddingLeft="4dp"
		            android:paddingRight="10dp"
		            android:paddingTop="4dp"
		            android:text="Save Changes"
		            android:textColor="@color/blanco" />
			</LinearLayout>    
	    </RelativeLayout>      
	</LinearLayout>
	
	<TextView
	    android:id="@+id/newUserTitle" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:text="@string/new_user_label"
		android:textColor="#dfdfdf"
		android:textSize="25sp"
		android:gravity="left"
		android:padding="15dp"
		android:background="@layout/background_label2" />
	
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	    
	    <LinearLayout 
	        style="@style/vertical_hfill_vfill"
	        android:paddingBottom="15dp">
	        
	        <RelativeLayout 
			    style="@style/vertical_hfill_vfill"
			    android:gravity="center"
			    android:paddingTop="10dp"
			    android:paddingBottom="10dp">
			    
				<TextView 
				    android:id="@+id/textViewUsername" 
				    style="@style/texto_estandar"
					android:text="@string/username"
					android:paddingRight="10dp"
					android:textColor="@color/blanco" />
			    
				<EditText 
				    android:id="@+id/editTextUsername"
					android:layout_width="250dp" 
					android:layout_height="wrap_content"
					android:singleLine="true" 
					android:layout_below="@id/textViewUsername"
					android:inputType="text" />
				
				<TextView 
				    android:id="@+id/textViewPassword" 
				    style="@style/texto_estandar"
					android:text="@string/password" 
					android:layout_below="@+id/editTextUsername"
					android:textColor="@color/blanco" />	
					
				<EditText 
				    android:id="@+id/editTextPassword"
					android:layout_width="250dp" 
					android:layout_height="wrap_content"
					android:singleLine="true" 
					android:layout_below="@id/textViewPassword"
					android:inputType="textPassword" />	
					
				<TextView 
				    android:id="@+id/textViewConfirmPassword" 
				    style="@style/texto_estandar"
					android:text="@string/confirm_password" 
					android:layout_below="@+id/editTextPassword"
					android:textColor="@color/blanco" />	
					
				<EditText 
				    android:id="@+id/editTextConfirmPassword"
					android:layout_width="250dp" 
					android:layout_height="wrap_content"
					android:singleLine="true" 
					android:layout_below="@id/textViewConfirmPassword"
					android:inputType="textPassword" />
					
			</RelativeLayout>
			
	        <Button 
			    android:text="@string/save_user_button_label"
			    android:layout_width="140dp"
				android:layout_height="wrap_content" 
				android:onClick="onSaveUserClick"
				android:layout_gravity="center_horizontal" />
	    </LinearLayout>
	</ScrollView>				
</LinearLayout>